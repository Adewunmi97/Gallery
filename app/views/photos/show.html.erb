<p style="color: green"><%= notice %></p>

<% if @photo.image.attached? %>
  <%= image_tag @photo.image.variant(resize_to_limit: [400, 300]) %>
<% end %>
<p><strong>Tags:</strong> <%= @photo.tags %></p>

<div>
  <%= link_to "Edit this photo", edit_photo_path(@photo), class: "button-link" %> |
  <%= link_to "Back to gallery", photos_path, class: "button-link" %>

  <%= button_to "Destroy this photo", @photo, method: :delete %>
</div>


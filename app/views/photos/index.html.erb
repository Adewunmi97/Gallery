<p class="notice-message"><%= notice %></p>

<h1 class="heading">Photos</h1>

<div class="photo-grid">
  <% @photos.each do |photo| %>
    <div class="photo-card">
      <% if photo.image.attached? %>
        <%= image_tag photo.image.variant(resize_to_limit: [400, 300]), class: "gallery-image", loading: "lazy", alt: photo.title %>
      <% end %>

      <h3><strong>Title:</strong> <%= photo.title %></h3>
      <p><strong>Description:</strong> <%= photo.description %></p>
      <p><strong>Tags:</strong> <%= photo.tags if photo.tags.present? %></p>
      <p><%= link_to "Show this photo", photo, class: "button-link" %></p>
    </div>
  <% end %>
</div>

<%= link_to "New photo", new_photo_path, class: "button-link" %>

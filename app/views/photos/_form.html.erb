<%= form_with(model: photo, local: true, html: { multipart: true, class: "photo-form" }) do |form| %>
  <% if photo.errors.any? %>
    <div class="form-errors">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
      <ul>
        <% photo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :tags, "Tags (comma-separated)" %>
    <%= form.text_field :tags, class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save Photo", class: "form-submit" %>
  </div>
<% end %>
